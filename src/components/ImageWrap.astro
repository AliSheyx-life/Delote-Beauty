---
const h = Astro.props
---

<div class="image-wrap" style={h}>
  <div class="border-item"></div>
  <slot />
</div>

<style lang="scss" is:global>
@import 'src/assets/styles/utils/var.scss';

.image-wrap{
    width: 100%;
    // height: 500px;
    position: relative;

    .image, img{
      position: absolute;
      left: 0;
      bottom: 0;
      width: calc(100% - 20px);
      height: calc(100% - 20px);
      object-fit: cover;
    }

    .border-item{
      position: absolute;
      right: 0;
      top: 0;
      width: calc(100% - 20px);
      height: calc(100% - 20px);
      border: 1px solid $brand;
    }
  }
</style>